html
    head
        +h.headers
        +h.load('/template/style.scss')
        title= post.title + " - " + site.title
    body.single
        .surface-content
            header.site-header
                .container
                    nav(class='topNav')
                        +site.just_nav
                    h1.site-title: a(href='/')= site.title
                    p.site-description= site.configs.sub_title

            main.main-content
                section.container
                    div(class='block-postMetaWrap')
                        time=post.date.format('%m %d, %Y')
                        span.sep
                        if post.category
                            a(href=post.category.url)= post.category.title
                    h2(class='block-title'): a(href=post.url)= post.title
                    .grap= post.content

                    if post.tags
                        .post--keywords
                            for tag in post.tags
                                a(href='/tag/{{tag}}',class='post--keyword')= tag

                    if post.metadata.comment not in ['no', 'No', False]
                        div.comments-area
                            +post.comments_as_html()

            footer(class='site-footer')
                .container
